generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
    // directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
    id           String    @id
    username     String    @unique
    hashPassword String?
    sessions     Session[]
}

model Session {
    id        String   @id
    userId    String
    expiresAt DateTime
    user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}
